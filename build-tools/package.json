{
	"name": "root",
	"version": "0.0.1",
	"private": true,
	"homepage": "https://fluidframework.com",
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/FluidFramework.git",
		"directory": "build-tools"
	},
	"license": "MIT",
	"author": "Microsoft and contributors",
	"scripts": {
		"build": "nx run-many --target=build",
		"build:ci": "nx run-many --target=build",
		"docs": "nx run-many --target=build:docs",
		"build:fast": "fluid-build --root .. --buildTools",
		"build:genver": "nx run-many --target=build:genver",
		"changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 2 --commit-path . -t build-tools_v --context lerna.json",
		"clean": "nx run-many --target=clean && pnpm run clean:docs && pnpm run clean:nyc",
		"clean:docs": "rimraf **/_api-extractor-temp docs/api/*/**",
		"clean:nyc": "rimraf nyc/**",
		"commit": "git-cz",
		"format": "nx run-many --target=format",
		"preinstall": "node ../scripts/only-pnpm.cjs",
		"install:commitlint": "npm install --global @commitlint/config-conventional",
		"lint": "nx run-many --target=lint",
		"lint:fix": "nx run-many --target=lint:fix",
		"policy-check": "node packages/build-cli/bin/dev check policy --exclusions packages/build-tools/data/exclusions.json",
		"policy-check:asserts": "node packages/build-cli/bin/dev check policy --exclusions packages/build-tools/data/exclusions.json --handler assert-short-codes --fix",
		"policy-check:fix": "node packages/build-cli/bin/dev check policy --exclusions packages/build-tools/data/exclusions.json --excludeHandler assert-short-codes --fix",
		"prettier": "prettier --check . --ignore-path ../.prettierignore",
		"prettier:fix": "prettier --write . --ignore-path ../.prettierignore",
		"test": "pnpm run test:mocha && pnpm run test:jest && pnpm run test:realsvc",
		"test:bail": "pnpm run test:mocha:bail && pnpm run test:jest:bail",
		"test:copyresults": "copyfiles --exclude \"**/node_modules/**\" \"**/nyc/**\" nyc",
		"test:coverage": "c8 pnpm run test:report",
		"test:jest": "assign-test-ports && nx run-many --target=test:jest",
		"test:jest:bail": "assign-test-ports && nx run-many --target=test:jest --nx-bail=true",
		"test:jest:report": "assign-test-ports && nx run-many --target=test:jest -- --ci --reporters=default --reporters=jest-junit",
		"test:mocha": "nx run-many --target=test:mocha",
		"test:mocha:bail": "nx run-many --target=test:mocha --nx-bail=true",
		"test:mocha:report": "nx run-many --target=test:mocha -- --reporter xunit --reporter-option output=nyc/mocha-junit-report.xml",
		"test:realsvc": "nx run-many --target=test:realsvc",
		"test:realsvc:report": "nx run-many --target=test:realsvc:report",
		"test:report": "pnpm run test:mocha:report && pnpm run test:jest:report && pnpm run test:realsvc:report",
		"tsc": "nx run-many --target=tsc",
		"tsc:fast": "fluid-build --root .. -s tsc --buildTools",
		"typetests:gen": "flub generate typetests --generate --releaseGroup build-tools",
		"typetests:prepare": "flub generate typetests --prepare --releaseGroup build-tools --verbose",
		"watch": "concurrently \"pnpm run watch:tsc\" \"pnpm run watch:esnext\" \"pnpm run watch:webpack\"",
		"watch:esnext": "lerna run --parallel build:esnext -- -- --watch",
		"watch:tsc": "lerna run --parallel tsc -- -- --watch",
		"watch:webpack": "lerna run --parallel webpack -- -- --watch",
		"webpack": "lerna run --no-sort webpack --stream",
		"webpack:profile": "lerna run --no-sort webpack:profile --stream"
	},
	"nyc": {
		"all": true,
		"cache-dir": "nyc/.cache",
		"exclude": [],
		"include": [],
		"report-dir": "nyc/report",
		"reporter": [
			"cobertura",
			"html",
			"text"
		],
		"temp-directory": "nyc/.nyc_output"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@commitlint/cz-commitlint": "^17.1.2",
		"@fluidframework/test-tools": "^0.2.3074",
		"@microsoft/api-documenter": "^7.17.9",
		"@microsoft/api-extractor": "^7.22.2",
		"@nrwl/nx-cloud": "^15.0.3",
		"c8": "^7.7.1",
		"commitizen": "^4.2.5",
		"concurrently": "^6.2.0",
		"conventional-changelog-cli": "^2.2.2",
		"conventional-changelog-conventionalcommits": "^5.0.0",
		"copyfiles": "^2.4.1",
		"cz-conventional-changelog": "^3.3.0",
		"cz-customizable": "^7.0.0",
		"inquirer": "^8.0.0",
		"lerna": "^5.1.8",
		"nx": "^15.7.2",
		"prettier": "~2.6.2",
		"rimraf": "^2.6.2",
		"run-script-os": "^1.1.6",
		"typescript": "~4.5.5"
	},
	"packageManager": "pnpm@7.14.2",
	"pnpm": {
		"peerDependencyRules": {
			"allowedVersions": {
				"eslint": "8.6.0"
			}
		}
	}
}
